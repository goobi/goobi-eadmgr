<project xmlns:ivy="antlib:org.apache.ivy.ant">

	<property name="src.dir" value="src"/>
	<property name="build.dir" value="build"/>

	<path id="compile.classpath">
		<fileset dir="${basedir}/lib"/>
		<fileset dir="${basedir}/slib"/>
	</path>

	<target name="splash">
		<echo>========================================================</echo>
		<echo>= Building: ${ant.project.name}</echo>
		<echo>========================================================</echo>
	</target>

	<target name="init" depends="splash">
		<mkdir dir="${build.dir}"/>
	</target>

	<target name="check-ivy-file">
		<available file="ivy.xml" property="ivy-file-present"/>
	</target>

	<target name="resolve" depends="check-ivy-file" if="ivy-file-present">
		<ivy:retrieve sync="true" log="download-only"/>
	</target>

	<target name="compile" depends="init, resolve">
		<javac includeantruntime="false" srcdir="${src.dir}" destdir="${build.dir}" classpathref="compile.classpath"/>
	</target>

	<target name="clean">
		<delete dir="${build.dir}"/>
	</target>

</project>
